<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utpscm.amitabha.user.dao.UserDao">
	<resultMap id="userMap" type="AmitabhaUser">
		<id column="id" property="id"></id>
		<result column="username" property="username"></result>
		<result column="first_name" property="firstName"></result>
		<result column="last_name" property="lastName"></result>
		<result column="password" property="password"></result>
		<result column="desc" property="desc"></result>
		<result column="enabled" property="enabled"></result>
	</resultMap>

	<select id="queryUserByUsername" parameterType="string" resultMap="userMap">
		SELECT *
		FROM user
		<where>
            username = #{username}
		</where>
	</select>
	
	<select id="queryUserById" parameterType="int" resultMap="userMap">
        SELECT *
        FROM user
        <where>
            id = #{id}
        </where>
    </select>
    
    <select id="login" parameterType="map" resultMap="userMap">
        SELECT *
        FROM user
        <where>
            username = #{username} AND password = #{password}
        </where>
    </select>
    
</mapper>